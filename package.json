{
  "name": "tiki",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build:js": "vite --config=src/js/vite.config.mjs build --mode=production",
    "build:scss": "npm run build -w src/scss",
    "build": "package-lock-check && concurrently \"npm:build:*\"",
    "watch:js": "vite --config=src/js/vite.config.mjs build --watch --mode=development",
    "watch:scss": "npm run watch -w src/scss",
    "watch": "package-lock-check && concurrently \"npm:watch:*\"",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "format": "prettier .  --write",
    "clean":  "php console.php dev:buildwsconfs --clean"

  },
  "engines": {
    "npm": ">=7.0.0 <9.0.0",
    "node": ">=16.0.0 <19.0.0"
  },
  "dependencies": {
    "single-spa-css": "^2.0.0",
    "single-spa-vue": "^3.0.0"
  },
  "depencenciesCommentSingleLibs": {},
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "concurrently": "^8.2.1",
    "es-module-shims": "^1.8.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "package-lock-check": "^1.1.0",
    "prettier": "^3.0.3",
    "rollup-plugin-visualizer": "^5.9.2",
    "vite": "^4.4.9",
    "vite-plugin-static-copy": "^0.17.0"
  },
  "devDepencenciesCommentWillAlsoBeAvailableAsDevDependenciesInWorkspace": {
    "es-module-shims": "Copied to be available as an external, but not in common-externals, because it will not be included from import-maps",
    "@vitejs/plugin-vue": "",
    "eslint": "",
    "eslint-config-prettier": "",
    "eslint-plugin-prettier": "",
    "eslint-plugin-vue": "",
    "prettier": "",
    "sass": "",
    "vite": ""
  },
  "workspaces": [
    "src/js/common-externals",
    "src/js/jquery-tiki",
    "src/js/vue-mf/*",
    "src/scss"
  ]
}
